<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.elca.internship.client.controllers.TabProjectListController">
   <children>
      <HBox prefHeight="60.0">
         <children>
            <TextField fx:id="tfSearch" promptText="Project number, name, customer name" HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="cbStatus" promptText="Project status" stylesheets="@css/main.css">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin></ComboBox>
            <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#onBtnSearch" styleClass="btn-transprent-create" stylesheets="@css/main.css" text="Search Project">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin></Button>
            <Button fx:id="btnResetSearch" mnemonicParsing="false" onAction="#onBtnResetSearch" styleClass="btn-transprent" stylesheets="@css/main.css" text="Reset Search">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tbProject" prefHeight="280.0" prefWidth="600.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columns>
                <TableColumn fx:id="colCheck" prefWidth="43.0" />
                <TableColumn fx:id="colProNum" minWidth="0.0" prefWidth="83.0" text="Number" />
                  <TableColumn fx:id="colProName" prefWidth="91.0" text="Name" />
                  <TableColumn fx:id="colProSta" prefWidth="96.0" text="Status" />
                  <TableColumn fx:id="colProCus" prefWidth="108.0" text="Customer" />
                  <TableColumn fx:id="colProStart" prefWidth="111.0" text="Start Date" />
                  <TableColumn fx:id="colProDel" minWidth="9.0" prefWidth="67.0" text="Delete" />
              </columns>
            </TableView>
            <Pagination id="paginationTableProject" layoutY="180.0" maxPageIndicatorCount="4" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>
