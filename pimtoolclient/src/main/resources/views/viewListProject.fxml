<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbListProject" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.elca.internship.client.controllers.ViewListProjectController">
   <children>
      <HBox fx:id="hbFilterListProject" alignment="CENTER_LEFT" styleClass="border-top" stylesheets="@css/main.css">
         <children>
            <TextField fx:id="tfSearch" promptText="Project number, name, customer name" HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="cbStatus" promptText="Project status" stylesheets="@css/main.css">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin></ComboBox>
            <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#onBtnSearchClicked" stylesheets="@css/main.css" text="Search Project">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="btn-transparent" />
                  <String fx:value="btn-transparent-create" />
               </styleClass></Button>
            <HBox alignment="CENTER">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
               <children>
                  <Label fx:id="lbBtnResetSearch" alignment="CENTER" onMouseClicked="#onLbBtnResetSearchClicked" styleClass="label-btn-search" text="Reset Search" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets top="15.0" />
         </padding>
      </HBox>
      <TableView fx:id="tbProject" onMouseClicked="#displaySelected">
        <columns>
            <TableColumn fx:id="colCheck" />
            <TableColumn fx:id="colProNum" text="Number" />
            <TableColumn fx:id="colProName" text="Name" />
            <TableColumn fx:id="colProStatus" text="Status" />
            <TableColumn fx:id="colProCustomer" text="Customer" />
            <TableColumn fx:id="colProStart" text="Start Date" />
            <TableColumn fx:id="colProDel" text="Delete" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Pagination fx:id="paginationTableProject" maxPageIndicatorCount="4" />
   </children>
</VBox>
