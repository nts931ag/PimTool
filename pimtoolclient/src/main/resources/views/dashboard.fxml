<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.elca.internship.client.controllers.DashboardController">
   <top>
      <HBox fx:id="headerContainer" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="border-bottom" stylesheets="@css/main.css">
         <children>
            <ImageView fitHeight="83.0" fitWidth="116.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
               <HBox.margin>
                  <Insets left="25.0" />
               </HBox.margin>
            </ImageView>
            <Label styleClass="h1" stylesheets="@css/main.css" text="Project Infomation Management">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="label-menu-button" text="EN" />
                  <Label text="|" />
                  <Label styleClass="label-menu-button" text="FR">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <Label styleClass="label-menu-button" text="Help">
                     <HBox.margin>
                        <Insets right="25.0" />
                     </HBox.margin>
                  </Label>
                  <Label styleClass="label-menu-button" text="Log out" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <Pane styleClass="border-right" stylesheets="@css/main.css" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <VBox fx:id="sideBarContainer" prefWidth="200.0">
               <children>
                  <Label maxWidth="1.7976931348623157E308" prefWidth="200.0" styleClass="h4" text="Project list">
                     <VBox.margin>
                        <Insets left="40.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="lbMenuNew" onMouseClicked="#onLbNewClicked" styleClass="label-menu-button" text="New">
                     <VBox.margin>
                        <Insets left="40.0" />
                     </VBox.margin></Label>
                  <Label fx:id="lbMenuProject" onMouseClicked="#onLbProjectClicked" styleClass="label-menu-button" text="Project">
                     <VBox.margin>
                        <Insets left="40.0" />
                     </VBox.margin></Label>
                  <Label styleClass="label-menu-button" text="Customer">
                     <VBox.margin>
                        <Insets left="40.0" />
                     </VBox.margin></Label>
                  <Label styleClass="label-menu-button" text="Supplier">
                     <VBox.margin>
                        <Insets left="40.0" />
                     </VBox.margin></Label>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children>
      </Pane>
   </left>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <top>
            <VBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="470.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lbHeaderOfTab" styleClass="h3" text="Title of each tab" />
               </children>
            </VBox>
         </top>
         <center>
            <Pane fx:id="contentContainer" prefHeight="200.0" prefWidth="200.0" />
         </center>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </BorderPane>
   </center>
</BorderPane>
